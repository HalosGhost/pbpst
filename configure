#!/usr/bin/env bash

usage () {
    printf "Usage: ./configure [options]\n\n"
    printf "Options:\n"
    printf "  --cc='COMP'       Use COMP for compiler (default: clang)\n"
    printf "  --cflags='FLAGS'  Set CFLAGS (cf. Makefile for defaults)\n"
    printf "  --file-max='BTS'  Set max file size to BTS Bytes (default: 67108864)\n"
    printf "  --provider='URL'  Set fallback provider (default: 'https://ptpb.pw/')\n"
    printf "  --prefix='PATH'   Set prefix (default: '/usr/local')\n"
    printf "  --reset-config    Reset configuration to the defaults\n"
}

check_file () {
    [[ -f "$1" ]] && fnd='\x1b[32mY' || fnd='\x1b[31m\x1b[1mN';
    printf 'Found %-*s\t[ %b\x1b[0m ]\n' "$2" "$1:" "$fnd"
    [[ -f "$1" ]] || exit 1
}

check_deps () {
    i_cc=$(show_makerule CC | cut -d' ' -f3)
    cur_cflags=($(grep --color=never CFLAGS Makerules | sed 's/CFLAGS = //'))

    pushd ./src &> /dev/null
    hdrs=($("$i_cc" -M main.c | sed -e 's|.*:||' -e 's|\\||' | tr -d '\n'))

    len=0
    for i in make "$i_cc" mkdir install rm "${hdrs[@]}" "$cur_cflags[@]"; do
        if (( "${#i}" > len )); then
            len="${#i}"
        fi
    done

    for i in make pkg-config "$(which "$i_cc")" mkdir install rm; do
        [[ "$(which "$i" &> /dev/null; echo $?)" == 0 ]] && {
            check_file "$(which "$i")" "$len"
        } || check_file "$i" "$len"
    done

    for i in "${hdrs[@]}"; do
        if [[ "$i" != *'.h' || "$i" == *'bits'*  || "$i" == *'curl/easy'* ]]; then
            continue
        fi

        fh=$($i_cc -c -o tm -x c - <<< "#include \"$i\"" &> /dev/null; echo $?)
        [[ "$fh" == 0 ]] && {
            fnd='\x1b[32mY'; [[ -f "tm" ]] && rm -- tm
        } || fnd='\x1b[31m\x1b[1mN'

        printf 'Found %-*s\t[ %b\x1b[0m ]\n' "$len" "$i:" "$fnd"
        [[ "$fh" != 0 ]] && exit 1
    done
    popd &> /dev/null

    for i in "${cur_cflags[@]}"; do
        fc=$($i_cc -c -o tm -x c - "$i" <<< "#include <time.h>" &> /dev/null; echo $?)
        [[ "$fc" == 0 ]] && {
            fnd='\x1b[32mY'; [[ -f "tm" ]] && rm -- tm
        } || fnd='\x1b[31m\x1b[1mN'

        printf 'Found %-*s\t[ %b\x1b[0m ]\n' "$len" "$i:" "$fnd"
        [[ "$fc" != 0 ]] && exit 1
    done

    for i in curl jansson; do
        check_file "/usr/lib/lib$i.so" "$len"
    done
}

update_makerule () {
    sed -i ./Makerules -re "s/$1.*/$1 = $2/"
}

update () {
    sed -i ./src/main.h -re "s|(define $1)(\s*)(.*)$|\\1\\2$2|"
}

update_makevar () {
    sed -i ./Makefile -re "1s|$1((\\s+)?.?=).*|$1\\1 $2|;t" \
                       -e "1,/$1((\\s+)?.?=).*/s||$1\\1 $2|"
}

default_config () {
    def_cflags=(-g -O3 -fPIE -pie -Weverything -std=c11 -ggdb -flto
                -Wno-disabled-macro-expansion -D_FORTIFY_SOURCE=2
                -fstack-protector-strong -march=native
                --param=ssp-buffer-size=1 -Wl,-z,relro,-z,now
                -fsanitize=undefined -fsanitize-trap=undefined)

    update FALLBACK_PROVIDER '"https://ptpb.pw/"'
    update PB_FILE_MAX '67108864'
    update PREFIX '"/usr/local"'
    update_makevar PREFIX '/usr/local'
    update_makerule CFLAGS "${def_cflags[*]}"
    update_makerule CC 'clang'
}

show_makerule () {
    grep --color=never "^$1" ./Makerules
}

show_value () {
    printf "$1: %s\n" \
        "$('grep' "#define $2" ./src/main.h | sed -re "s/#define $2(\s*)(.*)$/\\2/")"
}

show_config () {
    show_makerule CFLAGS
    show_makerule CC
    show_value 'Fallback Provider' FALLBACK_PROVIDER
    show_value 'Max File Size' PB_FILE_MAX
    show_value 'Prefix' PREFIX
}

for i in "$@"; do
    case "$i" in
        --cc=*)         update_makerule CC "${i#*=}"; shift;;
        --cflags=*)     update_makerule CFLAGS "${i#*=}"; shift;;
        --file-max=*)   update PB_FILE_MAX "${i#*=}"; shift;;
        --help)         usage; exit 0;;
        --provider=*)   update FALLBACK_PROVIDER "\"${i#*=}\""; shift;;
        --prefix=*)     pref="${i#*=}"
                        update PREFIX "\"$pref\""
                        update_makevar PREFIX "$pref"
                        shift;;
        --reset-config) default_config; break;
    esac
done

show_config
check_deps
exit 0
